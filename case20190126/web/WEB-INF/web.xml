<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.choel.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SurveyServlet</servlet-name>
        <servlet-class>com.choel.SurveyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyServlet</servlet-name>
        <url-pattern>/servlet/survey</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Survey2Servlet</servlet-name>
        <servlet-class>com.choel.Survey2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Survey2Servlet</servlet-name>
        <url-pattern>/servlet/survey2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>com.choel.guestbook.AddMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/servlet/addMessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetMessageServlet</servlet-name>
        <servlet-class>com.choel.guestbook.GetMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMessageServlet</servlet-name>
        <url-pattern>/servlet/getMessage</url-pattern>
    </servlet-mapping>
</web-app>
